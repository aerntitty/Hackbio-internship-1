# Printing the organized information
for person in people:
    print(f"Name: {person['Name']}")
    print(f"Slack Username: {person['Slack Username']}")
    print(f"Email: {person['Email']}")
    print(f"Hobby: {person['Hobby']}")
    print(f"Country: {person['Country']}")
    print(f"Discipline: {person['Discipline']}")
    print(f"Programming Language: {person['Programming Language']}")
    print("-" * 50)
